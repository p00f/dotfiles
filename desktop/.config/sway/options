# vim: filetype=sway

for_window [title="ptpython"] floating enable, border normal, resize set width 500 px height 500 px
for_window [title="Firefox â€” Sharing Indicator"] floating enable, move absolute position 720 0, resize set 60 20, focus parent
for_window [title="Network Connections"] floating enable
for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 5
for_window [app_id="^clipman$"] floating enable, sticky enable, resize set 60 ppt 60 ppt

# Enable NumLock on start
input * xkb_numlock enable

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
set $term wezterm

# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu exec alacritty --class=launcher --title=launcher -e env TERMINAL_COMMAND="kitty -e" HIST_FILE="~/.local/state/swaylauncher_history" sway-launcher-desktop
