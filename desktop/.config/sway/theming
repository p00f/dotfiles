# vim: filetype=sway

# Font
font Fantasque Sans Mono 12

# Gaps and border
gaps outer 3
gaps inner 7
default_border none

# Colours
set $black #1C1B19
set $bright_black #1e1e1e

set $red #cd3131
set $bright_red #f14c4c

set $green #608b4e
set $bright_green #b5cea8

set $yellow #CE9178
set $bright_yellow #DCDCAA

set $blue #2472c8
set $bright_blue #569cd6

set $magenta #C586C0
set $bright_magenta #daadd6

set $cyan #11a8cd
set $bright_cyan #9cdcfe

set $white #e5e5e5
set $bright_white #e5e5e5

set $orange #D75F00
set $bright_orange #FF8700

set $xgray1 #262626
set $xgray2 #303030
set $xgray3 #3A3A3A
set $xgray4 #444444
set $xgray5 #4E4E4E

set $hard_black #000000

# Colors                border        background  text          indicator child_border
client.focused          $xgray5       $xgray1     $white        $yellow   $xgray1
client.focused_inactive $xgray3       $xgray3     $xgray5       $xgray3   $xgray3
client.unfocused        $xgray1       $xgray1     $xgray5       $xgray1   $xgray1
client.urgent           $red          $xgray1     $red          $red      $red
client.placeholder      $xgray3       $hard_black $xgray5       $xgray3   $xgray3
client.background       $black


# GTK

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Adwaita++-Dark'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'Cantarell 10.8'
}
