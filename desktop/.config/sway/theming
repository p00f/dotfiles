# vim: filetype=sway

# Font
font Delugia Nerd Font 10.5

# Gaps and border
gaps outer 3
gaps inner 7
default_border pixel 2

set $background #191622
set $foreground #ffffff

set $color0 #191622
set $color1 #e61f44
set $color2 #67e480
set $color3 #FFB86C
set $color4 #78d1e1
set $color5 #988bc7
set $color6 #78d1e1
set $color7 #c5c8c6
set $color8 #8796b0
set $color9 #e61f44
set $color10 #67e480
set $color11 #FFB86C
set $color12 #78d1e1
set $color13 #988bc7
set $color14 #78d1e1
set $color15 #ffffff

### Colors                border      background     text               indicator child_border
client.focused          $color8       $background    $foreground        $color8   $color8
client.urgent           $color8       $color8        $foreground        $color8   $color8


# GTK

set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Adwaita++-Dark'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'Cantarell 10.8'
}
