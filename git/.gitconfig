[include]
  path = ~/.gitconfig.local
[user]
  name = Chinmay Dalal
  signingkey = 2C930DF41C88D2A3
[core]
  pager = diff-so-fancy | less --tabs=2 -RFX
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[init]
  defaultBranch = main
[merge]
  tool = meld
[mergetool]
  path = meld
[commit]
  gpgsign = true
